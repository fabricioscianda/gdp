<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="gdp" transaction-type="RESOURCE_LOCAL">

		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

		<!-- Tomcat DS -->
		<non-jta-data-source>java:/comp/env/jdbc/gdpDS</non-jta-data-source>
		<!-- JBoss -->
<!--    		<non-jta-data-source>java:/gdpDS</non-jta-data-source> -->

		<!-- Clases -->
		<class>gdp.model.Asignatura</class>
		<class>gdp.model.Carrera</class>
		<class>gdp.model.Contacto</class>
		<class>gdp.model.Desempenio</class>
		<class>gdp.model.Docente</class>
		<class>gdp.model.Documentacion</class>
		<class>gdp.model.Domicilio</class>
		<class>gdp.model.Empleo</class>
		<class>gdp.model.FormacionAcademica</class>
		<class>gdp.model.InfoAdministrativa</class>
		<class>gdp.model.Instituto</class>
		<class>gdp.model.Localidad</class>
		<class>gdp.model.Partido</class>
		<class>gdp.model.Persona</class>
		<class>gdp.model.Provincia</class>
		<class>gdp.model.Sede</class>
		<class>gdp.model.TipoAdministracion</class>
		<class>gdp.model.TipoCargo</class>
		<class>gdp.model.TipoContacto</class>
		<class>gdp.model.TipoDocumento</class>
		<class>gdp.model.TipoEstadoContractual</class>
		<class>gdp.model.TipoEstadoFormacion</class>
		<class>gdp.model.TipoFormacion</class>
		<class>gdp.model.TipoMotivo</class>
		<class>gdp.model.TipoPersonal</class>
		<class>gdp.model.TipoRelacion</class>
		<class>gdp.model.TipoSituacion</class>
		<class>gdp.model.TipoSituacionRevista</class>

		<properties>
			<property name="eclipselink.session.customizer" value="eclipselink.session.customizer.JPAEclipseLinkSessionCustomizer" />
			<property name="eclipselink.target-database" value="org.eclipse.persistence.platform.database.PostgreSQLPlatform" />
			<!-- this one overrides -->
			<property name="eclipselink.logging.level" value="FINEST" />
			<property name="eclipselink.logging.logger" value="eclipselink.logging.logger.customizer.CustomSessionLogger" />
			<property name="eclipselink.logging.parameters" value="true" />

			<property name="eclipselink.create-ddl-jdbc-file-name" value="createDDL_ddlGeneration.jdbc" />
			<property name="eclipselink.drop-ddl-jdbc-file-name" value="dropDDL_ddlGeneration.jdbc" />
			<property name="eclipselink.cache.shared.default" value="false"/>

			<property name="eclipselink.ddl-generation.output-mode" value="both" />
			<property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
			<!-- 
				<property name="eclipselink.ddl-generation" value="create-or-extend-tables"/> 
				<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/> 
				<property name="eclipselink.ddl-generation" value="none" /> 
			-->
			<property name="eclipselink.target-database" value="PostgreSQL" />
			<property name="eclipselink.jpa.uppercase-column-names" value="true" />

		</properties>
	</persistence-unit>
</persistence>